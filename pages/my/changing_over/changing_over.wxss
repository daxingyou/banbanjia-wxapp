/* pages/changing_over/changing_over.wxss */
page{
  background-color: rgba(237, 59, 72, 0.5);
}
.changing_over{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  flex-direction:column;
  align-items: center;
}
.changing{
  height: 43vh;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 40rpx;
}
.changing_son{
  width: 290rpx;
  height: 290rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}
.changing_son_son{
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.merchant_box{
  background-color: rgba(255, 235, 59, 0.3);
}
.merchant_son{
  background-color: rgba(255, 235, 59, 0.5);
}
.porter_box{
  background-color: rgba(42, 130, 228, 0.3);
}
.porter_son{
    background-color: rgba(42, 130, 228, 0.5);
}
.domestic_box{
  background-color: rgba(121, 72, 234, 0.3);
}
.domestic_son{
  background-color: rgba(121, 72, 234, 0.5);
}
.text{
  width: 30rpx;
}
.merchant_box .text{
  line-height: 115rpx;
}
.porter_box .text{
  line-height: 75rpx;
}
.domestic_box .text{
  line-height: 57rpx;
}