@import '../../../utils/iconfont.wxss'; 
.feedback{padding: 20rpx 34rpx;}
.feedback_1{display: flex;align-items: center;justify-content: space-between;background-color: rgba(229, 229, 229, 1);border-radius: 16rpx;padding: 24rpx 28rpx;margin-bottom: 32rpx;}
.feedback_name{color: rgba(80, 80, 80, 1);font-size: 28rpx;}
.feedback_xl{width: 200rpx;text-align: right}
.feedback_icon{font-size: 40rpx;}
.feedback_2{background-color: rgba(255, 255, 255, 1);border-radius: 16rpx;box-shadow: 0px 0px 12px 0px rgba(229, 229, 229, 1);padding: 28rpx;}
.textarea{padding-top: 10rpx;font-size: 28rpx;width: 640rpx;}

.photo_image{width: 72rpx;height: 72rpx;margin-top:10rpx;}
.photo_tp{color: rgba(80, 80, 80, 1);font-size: 28rpx;margin-top:-6px;}
.images_list{display: flex;flex-wrap: wrap;width: 100%;padding-bottom: 40rpx;}
.image_box{width: 25%;display: flex;justify-content: center;position: relative; margin-top: 20rpx;}
.upload_image{border: 1px dashed #e5e5e5;width:130rpx;height: 130rpx;text-align:center;margin-top: 20rpx;}
.image_box image{width:130rpx;height:130rpx;text-align:left;margin-bottom:24rpx;margin-right: 15rpx;}
.images_close{position: absolute;top: -18rpx;width:40rpx !important;height:40rpx !important;right:-2rpx;}

.feedback_tj{position: fixed;left: 28rpx;right: 28rpx;bottom: 20rpx;text-align: center;background-color: rgba(237, 59, 72, 1);border-radius: 16rpx;box-shadow: 0px 5px 5px 0px rgba(237, 59, 72, 0.3);color: rgba(255, 255, 255, 1);font-size: 32rpx;padding: 16rpx 0 17rpx}