.community_box{overflow: hidden;}
.community_box{margin: 4rpx 0 10rpx 0;}
.tab{display: flex;color: rgba(80, 80, 80, 1);font-size:28rpx;font-weight: bold;padding-bottom:15rpx}
.tab_item{width:33.3%;text-align: center;display: flex;justify-content: center;}
.border{width:auto;padding-bottom:4rpx;}
.new{border-bottom:4rpx solid rgba(236, 65, 73, 1);color:rgba(236, 65, 73, 1);padding-bottom:14rpx;}
.scoll-h{height: 100%;}
.introduce_box{margin:36rpx 30rpx 0;}
.introduce_box .title{font-size: 32rpx}
.introduce_box .content_box{display: flex;margin-top:6rpx;}
.introduce_box .dian{width:10rpx;height:10rpx;background:rgba(80, 80, 80, 1);border-radius:10rpx;margin-right:22rpx;margin-top:16rpx;}
.introduce_box .content{width:100%;font-size: 28rpx;color:rgba(80, 80, 80, 1);}



.register_box{margin:25rpx;border:1px solid rgb(230, 230, 231);}
.register_box .column:nth-child(2n){background: rgb(243, 243, 243);}
.column{display: flex;font-size: 24rpx;align-items: center;}
.column view:nth-child(1){border-right:1px solid rgb(237, 237, 240);width:154rpx;color:rgba(80, 80, 80, 1);text-align: center;padding: 26rpx 0;}
.column view:nth-child(2){ width:530rpx;padding: 26rpx 0  26rpx 18rpx;}


.certificate_box{margin: 0 25rpx;}
.certificate image{width: 100%;height:400rpx;}
.certificate {height: auto;margin-bottom: 20rpx;}
.certificate view:nth-child(2){height: auto;}
.certificate_box .title{font-size: 28rpx;margin-bottom: 4rpx !important;}