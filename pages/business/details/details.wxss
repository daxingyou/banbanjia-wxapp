@import '../../../utils/iconfont.wxss'; 
page{background: #FAFAFA;}

/* 轮播 */
.carousel image {width: 100%;height: 100%;border-radius: 30rpx;margin:0 16rpx;}
.carousel swiper-item{display: flex;justify-content: center;align-items: center;}
.carousel swiper{height: 220rpx;}

/* 基本信息 */
.information{padding:20rpx 20rpx;height:200rpx;border-bottom:1px solid rgba(229, 229, 229, 1);}
.company{display: flex ;}
.information image{width: 96rpx;height: 96rpx;border-radius: 25px;}
.head_right{width: 100%;margin-left:20rpx;}
.case_number{color: rgba(172, 51, 193, 1);font-size: 24rpx;margin-top:17rpx;}
.head_right_name{color: rgba(80, 80, 80, 1);font-size: 28rpx;display: flex;align-items:center;}
.xx{margin-top:-7rpx;}
.head_right_one{display: flex;justify-content:space-between;align-items: center;}
.head_right_one image{width: 44rpx;height:44rpx;}
.head_right_right{display: flex;align-items: center;}
.telephone{display: flex;justify-content: space-between;align-items: center;}
.telephone view:nth-child(1){color: rgba(128, 128, 128, 1);font-size: 24rpx;}
.telephone view:nth-child(2){background-color: rgba(236, 65, 73, 1);border-radius: 16rpx;width:124rpx;height:52rpx;color: rgba(255, 255, 255, 1);font-size: 24rpx;display: flex;align-items: center;justify-content: center;
}
.address{color: rgba(128, 128, 128, 1);font-size: 24rpx;padding:2rpx 0 30rpx;}
.share{margin-left: 14rpx;}

/* 服务类型 */
.service_type{border-bottom:1px solid rgba(229, 229, 229, 1);padding-bottom:38rpx; }
.lable{display: flex;margin:24rpx 0 14rpx;}
.lable .name{color: rgba(80, 80, 80, 1);font-size: 28rpx;margin-left:18rpx;width:190rpx;}
.lable_list{display: flex;flex-wrap:wrap;width:100%;}
.lable_items{font-size: 20rpx;width: 118rpx;height: 36rpx;border-radius: 16rpx;display: flex;justify-content: center;align-items: center;margin-right:14rpx;margin-bottom:10rpx;}
.nav{display: flex;justify-content: space-around;margin:0 22rpx;}
.nav_items{color: rgba(80, 80, 80, 1);font-size: 20rpx;text-align: center;width: 158rpx;height: 144rpx; 
background-color: rgba(255, 255, 255, 1);border-radius: 8rpx;box-shadow: 0px 0px 5px 0px rgba(166, 166, 166, 0.3); 
display: flex;align-items: center;justify-content: center;}
.nav_items view view:nth-child(1){display: flex;align-items: center;}
.nav_items .free{margin:8rpx 0;}
.nav_items image{width: 28rpx;height: 28rpx;margin-right:6rpx;}
.nav .yuyue{width: 108rpx;height: 36rpx;color:rgba(255, 255, 255, 1);background-color: rgba(236, 65, 73, 1);border-radius:18rpx;
display: flex;align-items: center;justify-content: center;
}



/* 案例 */
.case{padding-bottom: 10rpx;border-bottom:1px solid rgba(229, 229, 229, 1);}
.case .head_box{display: flex;align-items: center;justify-content:space-between;color: rgba(80, 80, 80, 1);margin:18rpx 25rpx;}
.case .head_box view:nth-child(1){font-size: 28rpx;}
.case .head_box view:nth-child(2){font-size: 20rpx;display: flex;align-items:center}

 
.conent_box{display: flex;flex-wrap:wrap;margin: 0 12rpx;justify-content: space-around;}
.case_item{width: 50%;display:flex;justify-content:center;margin-bottom:22rpx;}
.conent_box image{width: 336rpx;height: 156rpx; border-radius: 16rpx; }
.case_item_title{color: rgba(80, 80, 80, 1);font-size: 24rpx;margin-top:-5rpx;  overflow: hidden;text-overflow: ellipsis;white-space: nowrap;width:334rpx;}



/* 现场 */
.scene_box{padding-bottom: 20rpx;border-bottom:1px solid rgba(229, 229, 229, 1);}
.scene_box .head_box{display: flex;align-items: center;justify-content:space-between;color: rgba(80, 80, 80, 1);margin:18rpx 25rpx;}
.scene_box .head_box view:nth-child(1){font-size: 28rpx;}
.scene_box .head_box view:nth-child(2){font-size: 20rpx;display: flex;align-items:center}
.scene{display: flex;}

.scene_box scroll-view{display: flex;width:100vw; hight: 200rpx;white-space: nowrap;}
.scene_box .scroll-view{display: flex;}
.scene_box .content_box{width:300rpx;text-align: center;margin-left:28rpx;}
.scene_box .content_box .image{width: 300rpx;height: 180rpx;border-radius: 8px;}
.scene_box .content_box view:nth-child(2){color: rgba(0, 0, 0, 1);font-size: 24rpx;}
.scene_box .content_box view:nth-child(3){color: rgba(128, 128, 128, 1);font-size: 16rpx;}
.scene_box .content_box view:nth-child(4){width: 240rpx;height:38rpx;color: rgba(255, 255, 255, 1);background-color: rgba(236, 65, 73, 1);border-radius: 16rpx;font-size: 20rpx;margin:0 auto;line-height:38rpx;
}

/* 信息 */
.info_box{padding-bottom: 10rpx;border-bottom:1px solid rgba(229, 229, 229, 1);}
.info_box .head_box{display: flex;align-items: center;justify-content:space-between;color: rgba(80, 80, 80, 1);margin:18rpx 25rpx;}
.info_box .head_box view:nth-child(1){font-size: 28rpx;}
.info_box .head_box view:nth-child(2){font-size: 20rpx;display: flex;align-items:center}
.info_box .list{display: flex;font-size: 24rpx;margin:0 25rpx 14rpx;}
.info_box .list view:nth-child(1){color: rgba(128, 128, 128, 1);width: 120rpx;}
.info_box .list view:nth-child(2){color: rgba(80, 80, 80, 1);width:82%;}

.bottom_distance{margin-bottom:66rpx;}
/* 底部按钮 */
.bottom_box{position:fixed;bottom: 0;left: 0;display:flex;height:90rpx;color: rgba(128, 128, 128, 1);font-size: 20rpx;background: rgba(250, 250, 250, 1);width: 100%;padding-left:35rpx;align-items: center;background: rgba(250, 250, 250, 1)}
.bottom_box .left image{width:38rpx;height:36rpx;}
.bottom_box .center image{width:36rpx;height: 36rpx;} 
.bottom_box .buttom{text-align:center;}
.left .name{}
.bottom_box .center .name{}
.bottom_box .center{margin:0 50rpx 0 40rpx;}
.bottom_box .right{width: 480rpx;height: 58rpx;color: rgba(255, 255, 255, 1);font-size: 24rpx;display: flex;text-align:center;line-height: 58rpx}
.bottom_box .right view:nth-child(1){width: 50%;background: rgba(236, 65, 73, 1);border-radius:30rpx 0 0 30rpx;}
.bottom_box .right view:nth-child(2){width: 50%;background: rgba(255, 141, 26, 1);border-radius:0 30rpx 30rpx 0;}